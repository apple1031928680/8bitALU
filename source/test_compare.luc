module test_compare (
    input clk,  // clock
    input rst,  // reset
    input start,
    output status[2] // 0 = not done; 1 = pass; 2 = fail
    
  ) {
  
  dff test_counter[4](.clk(clk), .rst(rst));
  
  .clk(clk) {
    // The reset conditioner is used to synchronize the reset signal to the FPGA
    // clock. This ensures the entire FPGA comes out of reset at the same time.
    .rst(rst) {
      fsm state = {IDLE, TEST, PASS, FAIL};  
    }    
  }
  compare compare;
    
  always {  
    status = 0;
    compare.a = 0;
    compare.b = 0;
    compare.alufn = 6d0;
    
    if(start == 0){ 
      state.d = state.IDLE;
    }
    
    case(state.q) {
      state.IDLE:
        status = 0;
        if(start == 1) {
          state.d = state.TEST;
        }
      state.TEST:
        case(test_counter.q) {
          //compare FF and FF
          4h0:
            compare.alufn = Inst.CMPEQ;
            compare.a = 8hFF;
            compare.b = 8hFF;
            
            if(compare.out != 1) {
              state.d = state.FAIL;
            }
          4h1:
            compare.alufn = Inst.CMPLT;
            compare.a = 8hFF;
            compare.b = 8hFF;
            
            if(compare.out != 0) {
              state.d = state.FAIL;
            }  
          4h2:
            compare.alufn = Inst.CMPLE;
            compare.a = 8hFF;
            compare.b = 8hFF;
            
            if(compare.out != 1) {
              state.d = state.FAIL;
            }  
          //compare 00 and 00  
          4h3:
            compare.alufn = Inst.CMPEQ;
            compare.a = 8h00;
            compare.b = 8h00;
            
            if(compare.out != 1) {
              state.d = state.FAIL;
            }                                      
          4h4:
            compare.alufn = Inst.CMPLT;
            compare.a = 8h00;
            compare.b = 8h00;
            
            if(compare.out != 0) {
              state.d = state.FAIL;
            }            
          4h5:
            compare.alufn = Inst.CMPLE;
            compare.a = 8h00;
            compare.b = 8h00;
            
            if(compare.out != 1) {
              state.d = state.FAIL;
            }   
          // a > b         
          4h6:
            compare.alufn = Inst.CMPEQ;
            compare.a = 8h53;
            compare.b = 8h35;
            
            if(compare.out != 0) {
              state.d = state.FAIL;
            }            
          4h7:
            compare.alufn = Inst.CMPLT;
            compare.a = 8h53;
            compare.b = 8h35;
            
            if(compare.out != 0) {
              state.d = state.FAIL;
            }             
          4h8:
            compare.alufn = Inst.CMPLE;
            compare.a = 8h53;
            compare.b = 8h35;
            
            if(compare.out != 0) {
              state.d = state.FAIL;
            } 
          // a < b
          4h9:
            compare.alufn = Inst.CMPEQ;
            compare.a = 8h36;
            compare.b = 8h54;
            
            if(compare.out != 0) {
              state.d = state.FAIL;
            }  
          4hA:
            compare.alufn = Inst.CMPLT;
            compare.a = 8h36;
            compare.b = 8h54;
            
            if(compare.out != 1) {
              state.d = state.FAIL;
            } 
          4hB:
            compare.alufn = Inst.CMPLE;
            compare.a = 8h36;
            compare.b = 8h54;
            
            if(compare.out != 1) {
              state.d = state.FAIL;
            }                                                                          
          4hF:
             state.d = state.PASS;            
        }
      state.PASS:
        status = 1;
      state.FAIL:
        status = 2;
    }
    
    test_counter.d = test_counter.q + 1;
  }
}
